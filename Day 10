class bankacc:
    def __init__(self):
        print("welcome to our bank")
        self.bal=0
    def chkbal(self):
        print("net balance in your acc:"+str(self.bal))
    def dep(self):
        amount=int(input("enter the amount to deposit:"))
        self.bal=self.bal+amount
        print("deposited amount:"+str(amount))
        print("current balance:"+str(self.bal))
    def withdrw(self):
        amount=input("enter the amount to withdraw:")
        if(self.bal>amt):
            self.bal=self.bal-amount
            print("withdraw amount:"+str(amount))
            print("current balance:"+str(self.bal))
        else:
            print("insufficient balance")
